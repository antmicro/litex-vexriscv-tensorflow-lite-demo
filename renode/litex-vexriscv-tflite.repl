ram: Memory.MappedMemory @ {
        sysbus 0x40000000;
        sysbus 0xc0000000 // shadow
    }
    size: 0x10000000

cpu: CPU.VexRiscv @ sysbus
    cpuType: "rv32imac"

uart: UART.LiteX_UART @ sysbus 0x82002000
    -> cpu@2

timer0: Timers.LiteX_Timer @ sysbus 0x82002800
    frequency: 100000000
    -> cpu@1

i2c: I2C.LiteX_I2C @ sysbus 0x82005800

adxl345: Sensors.ADXL345 @ i2c 0x1D

